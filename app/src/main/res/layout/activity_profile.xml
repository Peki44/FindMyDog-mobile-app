<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.ProfileActivity">

        <ImageView
            android:id="@+id/circleDogImage"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/newdog"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white" />

        <!--<de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleDogImage"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dog2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        &lt;!&ndash;app:layout_constraintTop_toBottomOf="@+id/enterText"&ndash;&gt;-->
        <Button
            android:id="@+id/camera"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/camerabtn"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/dogsname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/circleDogImage"
            tools:layout_editor_absoluteY="96dp" />

        <Button
            android:id="@+id/gallery"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/gallerybtn"
            android:backgroundTint="@null"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/dogsname"
            app:layout_constraintLeft_toRightOf="@id/circleDogImage"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="96dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dogsname"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/black"
            android:hint="Dog's name"
            android:drawableLeft="@drawable/ic_dog"
            android:drawablePadding="-40dp"
            android:paddingLeft="15dp"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@+id/circleDogImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/breed"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/black"
            android:hint="Breed"
            android:drawableLeft="@drawable/ic_breed"
            android:drawablePadding="-40dp"
            android:paddingLeft="15dp"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dogsname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/owner"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/black"
            android:hint="Owner"
            android:drawableLeft="@drawable/ic_owner"
            android:drawablePadding="-40dp"
            android:paddingLeft="15dp"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@+id/breed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneNumber"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/black"
            android:hint="Phone"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="-40dp"
            android:paddingLeft="15dp"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@+id/owner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/black"
            android:hint="Email"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="-40dp"
            android:paddingLeft="15dp"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/address"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/black"
            android:hint="Address"
            android:drawableLeft="@drawable/ic_dog_house"
            android:drawablePadding="-40dp"
            android:paddingLeft="15dp"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/addDog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/addprofilebtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address" />

        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="#E0E0E0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addDog"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!--<Button
            android:id="@+id/generatebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="75dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/generateqrbtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qrcode" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>