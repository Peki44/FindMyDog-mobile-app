<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#53D3FB"
    tools:context=".ui.activity.SignUpActivity">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="325dp"
        android:layout_height="410dp"
        android:background="@drawable/bg_central"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        android:elevation="20dp">

        <TextView
            android:id="@+id/loginTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="36dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailSignUp"
            android:layout_width="275dp"
            android:layout_height="46dp"
            android:layout_below="@id/loginTxt"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_input"
            android:elevation="8dp"
            android:fontFamily="@font/nunito_regular"
            android:hint="Email"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordSignUp"
            android:layout_width="275dp"
            android:layout_height="46dp"
            android:layout_below="@id/emailSignUp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/nunito_regular"
            android:hint="Password"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:elevation="8dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordConfirmSignUp"
            android:layout_width="275dp"
            android:layout_height="46dp"
            android:layout_below="@id/passwordSignUp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/nunito_regular"
            android:hint="Confirm password"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:elevation="8dp"/>

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordConfirmSignUp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginTop="18dp"
            android:text="Already have account? Login"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Button
            android:id="@+id/signUp"
            android:layout_width="190dp"
            android:layout_height="84dp"
            android:layout_below="@id/loginText"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/signupimage"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <Button
        android:id="@+id/scanCode"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/scanqrbutton"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
