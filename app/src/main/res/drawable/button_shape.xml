<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#29CCFF"
                android:alpha="0.5"/>

            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item
        android:left="5dp"
        android:right="3dp"
        android:top="5dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#53D3FB"/>
            <corners android:radius="10dp"/>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>

</layer-list>